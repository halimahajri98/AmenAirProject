<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        WPLoginInputRow
    -->
    <declare-styleable name="wpLoginInputRow">
        <attr name="wpIconDrawable" format="reference"/>
        <attr name="wpIconDrawableTint" format="color"/>
        <attr name="android:inputType" />
        <attr name="android:hint" />
        <attr name="android:imeOptions" />
        <attr name="passwordToggleEnabled" />
        <attr name="passwordToggleTint" />
        <attr name="android:textAlignment" />
    </declare-styleable>

    <!-- Semantic colors -->
    <attr name="wpColorText" format="reference|color" />
    <attr name="wpColorTextSubtle" format="reference|color" />
    <attr name="wpColorError" format="reference|color" />

    <attr name="wpColorWarningDark" format="reference|color" />



</resources>
